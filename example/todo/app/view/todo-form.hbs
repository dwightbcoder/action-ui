<form ui-action="save todo">
    <div class="field has-addons">
        <div class="control">
            <input type="hidden" name="checked" value="0">
            <input class="input" type="text" name="text" placeholder="What needs done?">
        </div>
        <div class="control">
            <button class="button is-info">
                <span class="icon">
                    <i class="fas fa-plus"></i>
                </span>
            </button>
        </div>
    </div>
</form>